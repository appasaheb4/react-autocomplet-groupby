{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "outDir": "./lib",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": ["./src/**/*.ts","./src/**/*.tsx"],
  "exclude": ["dist", "node_modules"],
  "typeRoots": ["../node_modules/@types/index.d.ts"]
}
